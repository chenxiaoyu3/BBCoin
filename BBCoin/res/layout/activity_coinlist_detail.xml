<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".TradeMarketView"
    android:background="@drawable/bg_main_3" 
    android:id="@+id/v_coinListDetai_root"
    >
<!--

-->
	<com.chenxiaoyu.bbcoin.widget.PriceListView
	    android:id="@+id/v_coinListDetai_Left"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="3"
	    />
	<ImageView 
	    android:layout_width="2dp" 
	    android:layout_height="match_parent"
	    android:layout_marginLeft="4dp"
	    android:scaleType="fitXY"
	    android:layout_marginRight="4dp"
	    android:src="@drawable/seperator_ver"/>
	<ScrollView 
	    android:id="@+id/sv_coinListDetail"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="7">
	    <com.chenxiaoyu.bbcoin.widget.CoinStatusView 
		    android:id="@+id/v_coinListDetai_Right"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    ></com.chenxiaoyu.bbcoin.widget.CoinStatusView>
	</ScrollView>
	

	 
</LinearLayout>
