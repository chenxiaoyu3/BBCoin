<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_slideMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    >
    <ProgressBar 
	    android:id="@+id/pb_slideMenu_loading"
	    android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_margin="5dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    style="@android:attr/progressBarStyleSmall"
	    android:visibility="invisible"/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:orientation="vertical"
	    android:layout_above="@id/pb_slideMenu_loading"
	    >
	    <Button 
	        android:id="@+id/bt_slideMenu_refresh"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
	        android:textSize="12sp"
	        android:textColor="@color/white"
	        />
	    <TextView 
		    android:id="@+id/tv_slideMenu_timestamp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:textSize="12sp"
		    android:textColor="@color/white"/>
		<ScrollView 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    <LinearLayout 
		        android:id="@+id/v_slideMenu_coins"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
	        />
		</ScrollView>
		
		   
	</LinearLayout>
	
</RelativeLayout>